<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/FlyItLogoRegisterPage"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@mipmap/ic_launcher_plane_foreground"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email_register"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/FlyItLogoRegisterPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:hint="@string/register_page_insert_email"
        android:inputType="textEmailAddress"
        android:ems="12"
        android:drawableLeft="@drawable/ic_action_email"
        android:background="#11000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/email_register_repeat"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/email_register"
        android:layout_alignRight="@id/email_register"
        android:layout_below="@id/email_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/register_page_repeat_email"
        android:inputType="textEmailAddress"
        android:ems="12"
        android:drawableLeft="@drawable/ic_action_email"
        android:background="#11000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/email_register_repeat"
        android:layout_alignRight="@id/email_register_repeat"
        android:layout_below="@id/email_register_repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/register_page_insert_password"
        android:ems="12"
        android:drawableLeft="@drawable/ic_action_password"
        android:background="#11000000"
        android:textSize="20dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/password_register_repeat"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/password_register"
        android:layout_alignRight="@id/password_register"
        android:layout_below="@id/password_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/register_page_repeat_password"
        android:ems="12"
        android:drawableLeft="@drawable/ic_action_password"
        android:background="#11000000"
        android:textSize="20dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/register_button"
        android:layout_height="35dp"
        android:layout_width="wrap_content"
        android:text="@string/register_page_register_button"
        android:layout_alignRight="@id/password_register_repeat"
        android:layout_alignLeft="@id/password_register_repeat"
        android:layout_below="@id/password_register_repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#854D77"
        android:textColor="#EFEFEF"
        />

    <TextView
        android:id="@+id/LoginMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_page_login_message"
        android:layout_below="@id/register_button"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp" />




</RelativeLayout>